{
    "name": "arbazaar-protocol",
    "version": "0.0.0",
    "author": "Nathan Clark",
    "license": "GPL-3.0",
    "types": "./types/index.ts",
    "description": "Arbazaar protocol contracts",
    "files": [
        "abi",
        "artifacts",
        "contracts",
        "deployments",
        "exports",
        "types"
    ],
    "keywords": [],
    "scripts": {
        "build": "hardhat compile",
        "console": "hardhat console",
        "dev": "hardhat --network localhost deploy --watch",
        "deploy": "hardhat run scripts/deploy.js --network localhost",
        "node": "hardhat node --network hardhat",
        "one:deploy": "hardhat --network mainnet deploy",
        "one:export": "hardhat --network mainnet export --export exports/one.json",
        "rinkeby:deploy": "hardhat --network rinkeby deploy",
        "rinkeby:export": "hardhat --network rinkeby export --export exports/rinkeby.json",
        "export": "hardhat export --export-all exports/deployments.json",
        "test": "hardhat test --verbose",
        "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" hardhat coverage",
        "test:gas": "cross-env REPORT_GAS=true yarn test",
        "prepublishOnly": "yarn run build"
    },
    "devDependencies": {
        "@boringcrypto/boring-solidity": "boringcrypto/BoringSolidity#e06e943",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.0",
        "@nomiclabs/hardhat-solhint": "^2.0.0",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@sushiswap/sdk": "5.0.0-canary.83",
        "@tenderly/hardhat-tenderly": "^1.0.0",
        "@typechain/ethers-v5": "^5.0.0",
        "@typechain/hardhat": "^2.3.0",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.1",
        "chai": "^4.3.4",
        "cross-env": "^7.0.0",
        "dotenv": "^8.6.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.4.7",
        "hardhat": "^2.0.7",
        "hardhat-abi-exporter": "^2.0.8",
        "hardhat-deploy": "^0.7.0-beta.44",
        "hardhat-deploy-ethers": "^0.3.0-beta.7",
        "hardhat-gas-reporter": "^1.0.0",
        "hardhat-preprocessor": "^0.1.0",
        "hardhat-spdx-license-identifier": "^2.0.0",
        "hardhat-typechain": "^0.3.5",
        "hardhat-watcher": "^2.0.0",
        "solidity-coverage": "^0.7.13",
        "ts-generator": "^0.1.1",
        "ts-node": "^9.1.1",
        "typechain": "^4.0.2",
        "typescript": "^4.2.2"
    },
    "dependencies": {
        "@ethersproject/hardware-wallets": "^5.0.14",
        "@openzeppelin/contracts": "^4.2.0",
        "@uniswap/v3-core": "^1.0.0",
        "@uniswap/v3-periphery": "^1.2.1",
        "eip-712": "^0.4.3"
    }
}
